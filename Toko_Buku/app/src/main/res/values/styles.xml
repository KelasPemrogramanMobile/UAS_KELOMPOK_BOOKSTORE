    <color name="input_register_hint">#5e6266</color>
    <color name="btn_login">#009347</color>
    <color name="btn_login_bg">#eceef1</color>
    <color name="lbl_name">#333333</color>
    <color name="btn_logut_bg">#009347</color>


    
</resources>